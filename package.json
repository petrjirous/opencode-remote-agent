{
  "name": "opencode-remote-agent",
  "version": "0.2.0",
  "description": "OpenCode plugin to run OpenCode agent tasks remotely on AWS ECS Fargate. Offload long-running coding tasks to the cloud.",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "cdk:deploy": "npx cdk deploy --require-approval never --outputs-file cdk-outputs.json",
    "cdk:destroy": "npx cdk destroy --force"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "opencode-cli",
    "headless",
    "remote-agent",
    "aws",
    "ecs",
    "fargate",
    "ai",
    "coding-agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/petrjirous/opencode-remote-agent"
  },
  "bugs": {
    "url": "https://github.com/petrjirous/opencode-remote-agent/issues"
  },
  "homepage": "https://github.com/petrjirous/opencode-remote-agent#readme",
  "author": "Petr Jirous",
  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.1.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.4.0"
  },
  "peerDependenciesMeta": {
    "aws-cdk-lib": {
      "optional": true
    },
    "constructs": {
      "optional": true
    }
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.994.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.700.0",
    "@aws-sdk/client-ecs": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-sts": "^3.700.0",
    "@aws-sdk/credential-providers": "^3.700.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.2.0",
    "@types/node": "^22.0.0",
    "aws-cdk": "^2.170.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.4.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "dist",
    "Dockerfile",
    "container",
    "infra",
    "cdk.json"
  ]
}
